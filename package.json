  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fannyhasbi/emocrypt/issues"
  },
  "homepage": "https://github.com/fannyhasbi/emocrypt#readme",
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "browserify": "^16.5.1",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "mocha": "^7.1.1",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3",
    "uglify-es": "^3.3.9"
