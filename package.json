{
  "name": "emocrypt",
  "version": "1.0.0",
  "description": "Emoji encryption",
  "main": "index.js",
  "scripts": {
    "build": "npm run test && tsc && npm run bundle",
    "test": "mocha --exit --require ts-node/register --colors test/**/*.ts",
